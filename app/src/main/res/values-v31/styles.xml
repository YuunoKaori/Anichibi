<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos específicos para Material You (Android 12+) -->
    
    <!-- Botón con colores dinámicos de Material You -->
    <style name="Widget.MaterialYou.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@android:color/system_accent1_600</item>
        <item name="android:textColor">@android:color/system_accent1_0</item>
        <item name="rippleColor">@android:color/system_accent1_100</item>
    </style>
    
    <!-- Tarjeta con bordes redondeados y colores dinámicos -->
    <style name="Widget.MaterialYou.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@android:color/system_neutral1_50</item>
        <item name="cardForegroundColor">@android:color/system_accent2_50</item>
        <item name="rippleColor">@android:color/system_accent1_100</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
    
    <!-- Barra de navegación con colores dinámicos -->
    <style name="Widget.MaterialYou.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@android:color/system_neutral1_900</item>
        <item name="itemIconTint">@android:color/system_accent1_100</item>
        <item name="itemTextColor">@android:color/system_accent1_100</item>
        <item name="itemRippleColor">@android:color/system_accent1_600</item>
    </style>
</resources> 